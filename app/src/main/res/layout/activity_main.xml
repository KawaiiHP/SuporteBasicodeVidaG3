<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/fundocoracao">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="112"
        android:id="@+id/button112"
        android:background="#ff60ff1c"
        android:textSize="38dp"
        android:singleLine="true"
        android:textColor="#ffffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Engasgamento"
        android:id="@+id/buttonEngasgamento"
        android:onClick="buttonOnClickEngasgamento"
        android:backgroundTint="#ff333333"
        android:background="#ff2b2b2b"
        android:textColor="#ffffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/buttonSBV"
        android:layout_alignEnd="@+id/buttonSBV" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suporte BÃ¡sico de Vida"
        android:id="@+id/buttonSBV"
        android:onClick="buttonOnClickSBV"
        android:backgroundTint="#ff333333"
        android:background="#ff2b2b2b"
        android:textColor="#ffffffff"
        android:layout_above="@+id/buttonEngasgamento"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acerca"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#ff333333"
        android:background="#ff2b2b2b"
        android:textColor="#ffffffff"
        android:onClick="buttonOnClickAcerca" />

</RelativeLayout>
